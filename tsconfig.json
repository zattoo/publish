{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext"],
      "module": "NodeNext",
      "baseUrl": ".",
      "types": [
        "node",
      ],
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
  }
